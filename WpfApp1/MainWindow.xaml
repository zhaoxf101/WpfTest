<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="字符串加密工具" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBox Name="Txt1" AcceptsReturn="True" TextChanged="Txt1_TextChanged" />
        <TextBox Grid.Row="1" Name="Txt2" AcceptsReturn="True" GotFocus="Txt2_GotFocus" PreviewMouseDown="Txt2_PreviewMouseDown"  />

    </Grid>
</Window>
