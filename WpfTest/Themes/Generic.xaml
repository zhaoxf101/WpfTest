<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WpfTest">

    <local:Int32ToStringConverter x:Key="Int32ToStringConverter" />
    
    <Style TargetType="{x:Type local:DataPager}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:DataPager}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Margin="10,0"><Hyperlink>首页</Hyperlink></TextBlock>

                                <TextBlock Margin="5,0"><Hyperlink>1</Hyperlink></TextBlock>
                                <TextBlock Margin="5,0"><Hyperlink>2</Hyperlink></TextBlock>
                                <TextBlock Margin="5,0"><Hyperlink>3</Hyperlink></TextBlock>
                                <TextBlock Margin="5,0"><Hyperlink>4</Hyperlink></TextBlock>
                                <TextBlock Margin="5,0"><Hyperlink>5</Hyperlink></TextBlock>

                                <TextBlock Margin="10,0"><Hyperlink>尾页</Hyperlink></TextBlock>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="（第" />
                                <TextBlock Text="{TemplateBinding PageIndex, Converter={StaticResource Int32ToStringConverter}}" />

                                <TextBlock Text="页/共" />
                                <TextBlock Text="{TemplateBinding PageCount, Converter={StaticResource Int32ToStringConverter}}" />
                                <TextBlock Text="页）" />
                            </StackPanel>
                        </Grid>

                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
