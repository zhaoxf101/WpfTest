<UserControl x:Class="WpfTest2.ImageSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfTest2"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="45" />
        </Grid.RowDefinitions>
        <Grid Name="ImageWrapper" ClipToBounds="True">
            <Image Name="Image0" />
            <Image Name="Image1" />
        </Grid>
        <!--<Border BorderBrush="#2c5387" BorderThickness="1" Width="40" Height="10" CornerRadius="4" Background="#2272c4" />-->
        <StackPanel Grid.Row="1" Name="IndicatorWrapper" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
        </StackPanel>
    </Grid>
</UserControl>
